<UserControl x:Class="SharpTorrent.MVVM.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharpTorrent.MVVM.Views"
             xmlns:viewmodels="clr-namespace:SharpTorrent.MVVM.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="Transparent">
    <UserControl.DataContext>
        <viewmodels:HomeViewModel/>
    </UserControl.DataContext>
    <Grid>
        <TextBlock Text="HomeVM" HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="72" Foreground="White"/>
    </Grid>
