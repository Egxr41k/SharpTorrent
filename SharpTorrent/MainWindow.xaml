<Window x:Class="SharpTorrent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpTorrent"
        xmlns:views="clr-namespace:SharpTorrent.MVVM.Views"
        xmlns:vm="clr-namespace:SharpTorrent.MVVM.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="540"
        Width="960"
        Background="Black"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid>
        <views:SharpTorrentView DataContext="{Binding SharpTorrentViewModel}"/>
    </Grid>
</Window>
